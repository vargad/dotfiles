[include]
    path = .gitconfig_local ; include .gitconfig_local relative to the current file
[core]
    editor = neovide --no-fork
    excludesfile = ~/.gitignore_global
[push]
    default = simple
    autoSetupRemote = true
[branch]
    sort = -committerdate
[diff]
    tool = gvimdiff
[difftool]
    prompt = false
[alias]
    co = checkout
    st = status
    stat = status
    statu = status
